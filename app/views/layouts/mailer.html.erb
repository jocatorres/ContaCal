<html>
  <head>
    <title>ContaCal</title>
    <meta name="ROBOTS" content="NOINDEX,NOFOLLOW"> 
    <meta http-equiv="Content-Type" content="text/html; charset=UTF-8" />
  </head>
  <body style="background-color:#d4d4d4;"><center>
    <table cellpadding="0" cellspacing="0" style="background-color:#d4d4d4;padding-top:10px;padding-left:20px;padding-right:20px;font-size:16px;line-height:20px;color:#666666;font-family:'Helvetica Neue', Arial, Helvetica, Geneva, sans-serif;">
      <tbody><tr>
          <td bgcolor="#d4d4d4">
	          <a href="http://contacal.com.br" title="Visitar o site do ContaCal"><%= image_tag "#{root_url}images/email/logo.png", :width => 256, :height => 100, :border => 0, :style => 'margin-top:15px;margin-right:30px;margin-bottom:15px;margin-left:40px;', :alt => "ContaCal" %></a>
  
            <table align="center" cellpadding="0" cellspacing="0" width="702" style="font-size:16px;line-height:20px;color:#666666;font-family:'Helvetica Neue', Arial, Helvetica, Geneva, sans-serif;">
              <tbody>
                <tr>
                  <td><%= image_tag "#{root_url}images/email/top.png", :width => 702, :height => 13, :style => 'display: block', :alt => "" %></td>
                </tr>
                <tr>
                  <td bgcolor="#ffffff" width="550" style="background-color:#ffffff;border-right-width:1px;border-right-style:solid;border-right-color:#c0c0c0;border-left-width:1px;border-left-style:solid;border-left-color:#c0c0c0;">
                    <table cellpadding="0" cellspacing="0" width="700" bgcolor="ffffff" style="font-size:16px;line-height:20px;color:#757575;font-family:'Helvetica Neue', Arial, Helvetica, Geneva, sans-serif;background-color:#ffffff;">
                      <tbody><tr>
                          <td colspan="3">
															<% @message_title = yield :message_title %>
															<% if @message_title %>
		                            <h2 style="margin-top:20px;margin-right:30px;margin-bottom:15px;margin-left:40px;font-size:24px;line-height:27px;font-weight:bold;color:#000000;" class="edit"><%= @message_title %></h2>
		                            <hr style="background-color:#e8e8e8; border:0; color:#e8e8e8; height:1px;">
															<% end %>
	                            <div style="margin-top:0px;margin-right:30px;margin-bottom:15px;margin-left:40px;" class="edit">	
	                            	<%= yield %>
															</div>
                          </td>
                        </tr>
                    </tbody></table>
                  </td>
                </tr>
                <tr>
                  <td><%= image_tag "#{root_url}images/email/bottom.png", :width => 702, :height => 13, :style => 'display: block', :alt => "" %></td>
                </tr>
                <tr>
                  <td>
                    <table width="100%">
                      <tr>
                        <td>
                          <p style="text-align:left;margin-top:15px;margin-right:10px;margin-bottom:10px;margin-left:10px;"><small style="font-size:11px;line-height:15px;color:#777777;"><strong>Equipe ContaCal</strong><br />
                            Site: <a href="http://contacal.com.br">http://contacal.com.br</a><br />
                            Login: <a href="http://app.contacal.com.br">https://app.contacal.com.br</a><br />
													</small></p>
                        </td>
                        <td style="text-align:right;padding-right: 10px">
													&nbsp;
												</td>
                      </tr>
                    </table>
                  </td>
                </tr>
            </tbody></table>
          </td>
        </tr>
    </tbody></table></center>
	</body>
</html>