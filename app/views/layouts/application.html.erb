  <%= stylesheet_link_tag "contacal", "jquery-ui", "jquery.fancybox-1.3.4", "reset" %>
  <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.6.0/jquery.min.js"> </script> 
  <%= javascript_include_tag :all %>
  <%= csrf_meta_tag %>

  <!--[if lt IE 9]>
    <script src='http://html5shim.googlecode.com/svn/trunk/html5.js'></script>
  <![endif]-->

  <!--[if lte IE 7]>
    <link href="/stylesheets/iefix.css" media="all" rel="stylesheet" />
  <![endif]-->
</head>
<body id="<%= controller.controller_name %>">
  <header>
    <div id="masthead">
        <p align=right>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
		<%- if current_user.kcal_limit.nil? or current_user.kcal_limit == 0 -%>
           <%= link_to "Definir limite diário", edit_user_registration_url %> &bull;
	    <%- end -%> 
        <%= link_to "Alterar Dados", edit_user_registration_url %> &bull; <%= link_to "Ajuda", '/ajuda.html', :class => "terms-of-use-fancybox" %> &bull; <%= link_to "Blog", 'http://contacal.com.br/blog'%> &bull; <%= link_to "Site", 'http://contacal.com.br'%> &bull; <%= link_to "Sair", destroy_user_session_url, :method => :delete %>
    </div>
    <div id="logo"><a href="<%= root_url(:protocol => "http") %>">ContaCal</a></div>
	<div id="subscriber">
		<br /><a href="http://admin.contacal.com.br/user_friends/user_friend.cgi?from=<%=current_user.email%>" class="terms-of-use-fancybox"><font color=#dd0000><b>Indique</b></font></a> ContaCal para seus amigos!<br />
    </div>
	<div id="referrer">
<!--		ContaCal é uma entidade <%= link_to "sem fins lucrativos", payment_url %>.-->
    </div>
    <%= yield(:header_info) %>  
  </header>
  <hr />
  <section role="main">
    <%= yield %>
  </section>
  <hr />
  <footer>
    <p align=center><!--Copyright &copy; 2011 ContaCal. Dúvidas? Sugestões? <%= link_to 'Fale conosco', 'http://www.contacal.com.br/contato/', :target => '_blank' %>!<br>-->
	Mudar para versão  
	<% if mobile_device? %>
	    <%= link_to "web", :mobile => 0 %>.
	  <% else %>
	    para <%= link_to "celular", :mobile => 1 %>.
	  <% end %>
	
	</p>
  </footer>
