<h1>Defina uma nova senha</h1>

<%= form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => { :method => :put }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>
  
  <fieldset>
    <%= f.hidden_field :reset_password_token %>

    <p><%= f.label :password, "Nova senha" %><br />
    <%= f.password_field :password, :autocomplete => "off" %></p>

    <p><%= f.label :password_confirmation, "Repita a nova senha" %><br />
    <%= f.password_field :password_confirmation, :autocomplete => "off" %></p>

    <p><%= f.submit "Trocar senha" %></p>
  </fieldset>
<% end %>