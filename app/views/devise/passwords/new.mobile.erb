<h1>Esqueceu a senha?</h1>

<%= form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => { :method => :post }) do |f| %>
  <p><strong>Enviaremos instruções por email.</strong></p>
  
  <%- unless resource.errors.empty? -%>
    <p class="error">E-mail inválido ou não encontrado</p>
  <%- end -%>

  <fieldset>
    <p><%= f.label :email %><br />
    <%= f.email_field :email %></p>

    <p><%= f.submit "Envie-me as instruções" %></p>
  </fieldset>
<% end %>