    <%- user.update_attribute(:bank_billet_link_6, bb.attributes["external_link"]) -%>
    <%- user.update_attribute(:bank_billet_our_number_6, bb.attributes["our_number"]) -%>
    <%- user.update_attribute(:bank_billet_expire_at, date_expire.strftime("%Y-%m-%d")) -%>
    <%- sleep(1) -%>
  <%- end -%>
<%- end -%>
<%- if  user.bank_billet_link_12.nil? -%>
  <%- description = "Assinatura anual.\n\nATENÇÃO: O acesso ao ContaCal somente será liberado após o pagamento deste boleto.\n\nSeu login ContaCal é \"" + user.email + "\"."-%>
  <%- bb = Cobregratis::BankBillet.new(:amount => 93.60, :expire_at_date_string => date_expire.strftime("%d/%m/%Y"), :name => user.name, :acceptance => "S", :document_number => document_number, :description => description) -%>
  <%- if bb.save -%>
    <%- user.update_attribute(:bank_billet_link_12, bb.attributes["external_link"]) -%>
    <%- user.update_attribute(:bank_billet_our_number_12, bb.attributes["our_number"]) -%>
    <%- user.update_attribute(:bank_billet_expire_at, date_expire.strftime("%Y-%m-%d")) -%>
    <%- sleep(1) -%>
  <%- end -%>
<%- end -%>        

